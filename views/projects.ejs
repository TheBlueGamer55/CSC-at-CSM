<!DOCTYPE html>
<html>
  <title>Projects | CSC</title>
  <head>

  <link rel="stylesheet" type="text/css" href="../assets/css/main.css">
  <script src="../assets/js/script.js"></script>

  <!--    bootstrap    -->
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <!-- Latest compiled JavaScript -->
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  </head>

  <!-- ==================== end head ====================== -->

  <body>

  <div class="container">
    <div class="header">

        <div class="row">
          <div class="col-lg-3 col-md-3 col-sm-3">
            <div class="logo">
              <img src="../assets/images/pink_logo_placeholder.png">
            </div> <!-- logo -->

          </div> <!-- bootstrap left -->
          <div class="col-lg-9 col-md-9 col-sm-9">

            <div class="main-menu">
              <a class ="left-menu" href="/">home</a>
              <a href="/about">about</a>
              <a href="/events">events</a>
              <a href="/contact">contact</a>
              <a href="/projects">projects</a>
              <a class="right-menu"href="/members">members</a>
            </div> <!-- main-menu -->

            <div class="main-header">
              <h1>Computer Science Club</h1>
              <h4>College of San Mateo</h4>
              <h4>1700 W Hillsdale Blvd</h4>
              <h4>San Mateo, CA, 94402</h4>
            </div> <!-- main-header -->

          </div> <!-- bootstrap right -->
        </div> <!-- bootstrap row -->

      </div> <!-- header -->
    </div><!-- container -->
    <div class="main">
      <h1>Post new event</h1>
      <form method="post" action="/projects" accept-charset="utf-8">
        <div class="form-group">
         <label>Project Title</label><br>
         <input name="title" type="text" class="form-group" />
        </div>
        <div>
          <label>Project Link</label><br>
          <input name="link" type="text" class="form-group" />
        </div>
        <div>
          <label>Project Description</label><br>
          <textarea name="description" class="form-group"></textarea>
        </div>
        <button type="submit">Submit</button>
      </form>
    </div>  <div class="show-projects">
      <section class='col-xs-12 col-sm-6 col-md-6'>
        <section>
              <h2>All Projects</h2>
                <% projects.forEach(function(project) { %>
                    <ul>
                      <li><%= project.title %></li>
                      <td><%= project.link %></td><br>
                      <td><%= project.description %></td>
                    </ul>
                <% }); %>
            </section>
      </section>
      </div>
  </body>
</html>
